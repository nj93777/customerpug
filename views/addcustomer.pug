doctype html
html
  head
    title Add Customer
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    )
  body
    .container
      h1 Add Customer
      form(action="/addcustomer" method="post")
        .mb-3
          label(for="firstname").form-label First Name
          input(type="text" name="firstname" id="firstname" required).form-control
        .mb-3
          label(for="lastname").form-label Last Name
          input(type="text" name="lastname" id="lastname" required).form-control
        .mb-3
          label(for="email").form-label Email
          input(type="email" name="email" id="email" required).form-control
        .mb-3
          label(for="phone").form-label Phone
          input(type="text" name="phone" id="phone" required).form-control
        div
          button(type="submit").btn.btn-primary Add Customer