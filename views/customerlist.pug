doctype html
html
  head
    title Customer List
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    )
  body
    .container
      h1 Customer List
      a(href="/addcustomer" class="btn btn-primary mb-3") Add Customer
      table(class="table table-bordered")
        thead
          tr
            th ID
            th First Name
            th Last Name
            th Email
            th Phone
        tbody
          each customer in customers
            tr
              td= customer.id
              td= customer.firstname
              td= customer.lastname
              td= customer.email
              td= customer.phone